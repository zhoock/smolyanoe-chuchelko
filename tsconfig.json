// tsconfig.json
// –≠—Ç–æ—Ç —Ñ–∞–π–ª –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ TypeScript –Ω–∞—Å—Ç—Ä–æ–µ–Ω –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å React, Webpack –∏ —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–º–∏ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—è–º–∏ JavaScript.

{
  "compilerOptions": {
    "target": "ESNext", // –¶–µ–ª–µ–≤–∞—è –≤–µ—Ä—Å–∏—è ECMAScript ‚Äî –º–∞–∫—Å–∏–º–∞–ª—å–Ω–æ —Å–æ–≤—Ä–µ–º–µ–Ω–Ω–∞—è
    "module": "ESNext", // –ú–æ–¥—É–ª—å–Ω–∞—è —Å–∏—Å—Ç–µ–º–∞ ‚Äî –ø—É—Å—Ç—å Webpack —Ä–∞–±–æ—Ç–∞–µ—Ç —Å ES-–º–æ–¥—É–ª—è–º–∏
    "moduleResolution": "node", // –†–∞–∑—Ä–µ—à–µ–Ω–∏–µ –º–æ–¥—É–ª–µ–π –≤ —Å—Ç–∏–ª–µ Node.js
    "lib": ["DOM", "ESNext"], // –î–æ—Å—Ç—É–ø–Ω—ã–µ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
    "jsx": "react-jsx", // JSX-–∫–æ–º–ø–∏–ª—è—Ü–∏—è –≤ —Å—Ç–∏–ª–µ React 17+
    "strict": true, // –°—Ç—Ä–æ–≥–∏–µ —Ç–∏–ø—ã
    "esModuleInterop": true, // –°–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å —Å CommonJS
    "allowSyntheticDefaultImports": true,
    "allowJs": true, // –†–∞–∑—Ä–µ—à–∏—Ç—å .js
    "resolveJsonModule": true, // –ò–º–ø–æ—Ä—Ç JSON
    "isolatedModules": true, // –ö–∞–∂–¥—ã–π —Ñ–∞–π–ª ‚Äî –º–æ–¥—É–ª—å
    "skipLibCheck": true, // –ü—Ä–æ–ø—É—Å–∫–∞—Ç—å –ø—Ä–æ–≤–µ—Ä–∫—É d.ts –≤ node_modules
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // –ë–∞–∑–∞ –¥–ª—è –Ω–µ–æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω—ã—Ö –ø—É—Ç–µ–π
    "paths": {
      "@components": ["components/index"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"]
    },

    // üîΩ –î–û–ë–ê–í–õ–ï–ù–û: —Ç–∏–ø—ã –¥–ª—è –≥–ª–æ–±–∞–ª—å–Ω–æ–≥–æ API Jest –∏ Node
    "types": ["jest", "node"]
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true
  },

  // üîΩ –î–û–ë–ê–í–õ–ï–ù–û: —á—Ç–æ–±—ã —Ç–µ—Å—Ç—ã –∏ setup —Ç–æ—á–Ω–æ –ø–æ–ø–∞–ª–∏ –≤ –ø—Ä–æ–µ–∫—Ç TS
  "include": [
    "src",
    "index.d.ts",
    "jest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "webpack/webpack.common.js",
    "postcss.config.js",
    "eslint.config.mjs",
    "coverage"
  ]
}
