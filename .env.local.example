# Supabase configuration
# Скопируйте этот файл в .env.local и заполните своими значениями
# Получить значения можно в Supabase Dashboard: Settings → API

# Supabase Project URL
VITE_SUPABASE_URL=https://project-ref.supabase.co

# Supabase Anon Key (публичный ключ, безопасен для клиентского кода)
VITE_SUPABASE_ANON_KEY=ваш_anon_ключ_здесь

# Service role key (используется только на сервере/в функциях)
VITE_SUPABASE_SERVICE_ROLE_KEY=ваш_service_role_ключ_здесь

# Для Netlify Functions (если используете прямой доступ)
SUPABASE_URL=https://project-ref.supabase.co
SUPABASE_ANON_KEY=ваш_anon_ключ_здесь

# Управление хранилищем Supabase
VITE_USE_SUPABASE_STORAGE=false

# Интеграции
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Поддомены пользователей (социальная сеть)
SUBDOMAIN_BASE_DOMAIN=smolyanoechuchelko.ru
ENABLE_SUBDOMAIN_MULTI_TENANCY=true
VITE_SUBDOMAIN_BASE_DOMAIN=smolyanoechuchelko.ru
VITE_ENABLE_SUBDOMAIN_MULTI_TENANCY=true

# Staging / локальная изоляция API
DATABASE_URL_STAGING=postgres://user:password@staging-host:5432/database
NETLIFY_STAGING_URL=https://staging.smolyanoechuchelko.ru
USE_PROD_API=false

